{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",                         
    "tests/**/*.ts"                        
  ],
  "exclude": [
    "node_modules",                       
    "dist"                                
  ]
}